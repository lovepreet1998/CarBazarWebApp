@page
@model CarBazarWebApp.Pages.Models.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center font1">Delete Company Model Details</h1>

<div>
    <h4>Are you sure you want to delete this Company Model Details?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model.ModelName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model.ModelName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Model.Id" />
        <input type="submit" value="Delete Company Model Details" class="btn btn-danger" /> 
    </form>
</div>
