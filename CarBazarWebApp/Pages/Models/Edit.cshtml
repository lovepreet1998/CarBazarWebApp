@page
@model CarBazarWebApp.Pages.Models.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center font1">Edit Company Model Details</h1>
<hr />
<div class="row">

    <div class="col-md-4">
        <img src="~/images/common.png" class="img-fluid" />
    </div>
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Model.Id" />
            <div class="form-group">
                <label asp-for="Model.CompanyID" class="control-label"></label>
                <select asp-for="Model.CompanyID" class="form-control" asp-items="ViewBag.CompanyID"></select>
                <span asp-validation-for="Model.CompanyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.ModelName" class="control-label"></label>
                <input asp-for="Model.ModelName" class="form-control" />
                <span asp-validation-for="Model.ModelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Company Model Details" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
