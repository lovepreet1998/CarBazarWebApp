@page
@model CarBazarWebApp.Pages.Cars.IndexModel

@{
    ViewData["Title"] = "Index";
}
<h1 class="text-center font1">All Cars</h1>

<p>
    <a asp-page="Create" class="btn btn-dark">Add New Car</a>
</p>
<hr />
<div class="row">
    @foreach (var item in Model.Car)
    {
        <div class="col-6">
            <div class="card mb-2">
                <div class="card-body">
                    <h4 class="card-title">
                        @Html.DisplayFor(modelItem => item.Model.ModelName) (@Html.DisplayFor(modelItem => item.ModelYear) Model)
                    </h4>
                    <p>Car No: @Html.DisplayFor(modelItem => item.CarNo) </p>
                    <p>Owner Name:  @Html.DisplayFor(modelItem => item.OwnerName)</p>
                    <p>Contact No:  @Html.DisplayFor(modelItem => item.ContactNo)</p>
                </div>
                <div class="card-footer">
                    <a asp-page="./Edit" class="btn btn-secondary mr-2" asp-route-id="@item.Id">Edit</a>
                    <a asp-page="./Delete" class="btn btn-warning" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
