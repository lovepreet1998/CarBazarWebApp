@page
@model CarBazarWebApp.Pages.Cars.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center font1">Delete Car Details</h1>

<div>
    <h4>Are you sure you want to delete this Car Details?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.CarNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.CarNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Model.ModelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.ModelYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.ModelYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.OwnerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.OwnerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.ContactNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.ContactNo)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Car.Id" />
        <input type="submit" value="Delete Car Details" class="btn btn-danger" /> 
    </form>
</div>
