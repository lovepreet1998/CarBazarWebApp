@page
@model CarBazarWebApp.Pages.Cars.CreateModel

@{
    ViewData["Title"] = "Create";
}


<h1 class="text-center font1">Add New Car</h1>
<hr />
<div class="row">

    <div class="col-md-4">
        <img src="~/images/common.png" class="img-fluid" />
    </div>
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car.CarNo" class="control-label"></label>
                <input asp-for="Car.CarNo" class="form-control" />
                <span asp-validation-for="Car.CarNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Car.ModelID" class="control-label"></label>
                <select asp-for="Car.ModelID" class="form-control" asp-items="ViewBag.ModelID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Car.ModelYear" class="control-label"></label>
                <input asp-for="Car.ModelYear" class="form-control" />
                <span asp-validation-for="Car.ModelYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.OwnerName" class="control-label"></label>
                <input asp-for="Car.OwnerName" class="form-control" />
                <span asp-validation-for="Car.OwnerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ContactNo" class="control-label"></label>
                <input asp-for="Car.ContactNo" class="form-control" />
                <span asp-validation-for="Car.ContactNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Car Details" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
