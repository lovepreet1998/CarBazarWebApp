@page
@model CarBazarWebApp.Pages.Reviews.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center font1">Edit Model Review</h1>
<hr />
<div class="row">

    <div class="col-md-4">
        <img src="~/images/common.png" class="img-fluid" />
    </div>
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.Id" />
            <div class="form-group">
                <label asp-for="Review.ModelID" class="control-label"></label>
                <select asp-for="Review.ModelID" class="form-control" asp-items="ViewBag.ModelID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Review.ReviewText" class="control-label"></label>
                <textarea asp-for="Review.ReviewText" class="form-control"></textarea>
                <span asp-validation-for="Review.ReviewText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Rating" class="control-label"></label>
                <input asp-for="Review.Rating" class="form-control" />
                <span asp-validation-for="Review.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Model Review Details" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
