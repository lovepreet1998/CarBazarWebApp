@page
@model CarBazarWebApp.Pages.Reviews.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<h1 class="text-center font1">Delete Model Review Details</h1>

<div>
    <h4>Are you sure you want to delete this Model Review Details?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Model.ModelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.ReviewText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.ReviewText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Rating)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Review.Id" />
        <input type="submit" value="Delete Model Review Details" class="btn btn-danger" />
    </form>
</div>
