@page
@model CarBazarWebApp.Pages.Companies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center font1">Add New Company</h1>
<hr />
<div class="row">

    <div class="col-md-4">
        <img src="~/images/common.png" class="img-fluid" />
    </div>
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Company.CompanyName" class="control-label"></label>
                <input asp-for="Company.CompanyName" class="form-control" />
                <span asp-validation-for="Company.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Company Details" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
